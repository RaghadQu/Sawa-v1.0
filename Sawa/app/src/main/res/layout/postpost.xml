<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">


    <Toolbar
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/purple"
        android:focusableInTouchMode="true">

        <TextView
            android:id="@+id/toolBarText"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:drawableLeft="@mipmap/left"
            android:focusableInTouchMode="true"
            android:gravity="center"
            android:paddingRight="10dp"
            android:text="New Post"
            android:textColor="#fff"
            android:textSize="19dp"
            android:textStyle="bold" />
    </Toolbar>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingLeft="25dp"
        android:paddingTop="15dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/tower" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="12dp"
            android:text="Raghad Qutteneh"
            android:textColor="#000" />


    </LinearLayout>


    <EditText
        android:id="@+id/postText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="108dp"
        android:background="#00000000"
        android:hint="Edit Text Hint"
        android:layout_marginBottom="10dp"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:paddingTop="25dp" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/postText"
        android:layout_marginTop="10dp"
        >
        <ProgressBar
            android:id="@+id/postProgressBar"
            android:layout_width="25dp"
            android:layout_gravity="center"
            android:layout_height="25dp"
            android:visibility="gone"
            android:indeterminateTint="@color/purple"
            />

    <com.google.android.youtube.player.YouTubePlayerView
        android:id="@+id/youtube"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="10dp"
        />

    <ImageView
        android:id="@+id/btn_close_youtube"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:clickable="true"
        android:padding="10dp"
        android:background="#00000000"
        android:layout_gravity="right"
        android:layout_marginRight="25dp"
        android:layout_marginTop="8dp"
        android:layout_alignTop="@+id/youtube"
        android:scaleType="fitXY"
        android:layout_centerInParent="true"
        android:src="@drawable/cross_icon"/>
    </FrameLayout>

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="190dp">

        <RelativeLayout android:id="@+id/root"
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/showPhoto"
            android:scaleType="centerCrop"

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:contentDescription="Specs"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:scrollbars="vertical" />

        <ImageButton
            android:id="@+id/btn_close"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_gravity="end"
            android:background="#00000000"
            android:layout_marginLeft="-35dp"
            android:layout_marginTop="23dp"
            android:scaleType="fitXY"
            android:layout_toRightOf="@+id/showPhoto"
            android:visibility="invisible"
            android:src="@drawable/cross_icon"/>
        </RelativeLayout>

    </ScrollView>


