<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#eee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/post_corners">

        <TextView
            android:id="@+id/postTime"
            android:layout_marginLeft="165dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10:10pm"
            android:layout_centerVertical="true"
            android:textSize="13dp"
            />

        <at.markushi.ui.CircleButton
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:layout_marginTop="8dp"
            android:layout_marginLeft="23dp"
            android:src="@drawable/private_comment2"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_marginTop="59dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/post_corners">





        <LinearLayout
            android:id="@+id/userInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:paddingRight="15dp"
            android:paddingTop="17dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/userProfilePicture"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:src="@drawable/tower" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="6dp"
                    android:text="First LastName"
                    android:textColor="#000"
                    android:textSize="14dp"
                    android:textStyle="bold"/>




            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="65dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/love_post"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:layout_marginTop="3dp"
                    android:padding="4dp"
                    android:src="@drawable/love2" />

                <TextView
                    android:id="@+id/loveCount"
                    android:layout_width="10dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="0dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/like_post"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="6dp"
                    android:src="@drawable/like3"

                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="2"
                    android:textSize="13dp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="8dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/dislike_post"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:padding="6dp"
                    android:src="@drawable/unlike3" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text=""
                    android:textSize="13dp" />

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/postInfoLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/userInfoLayout"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/postText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:paddingTop="5dp"
                android:text=""
                android:textColor="#000"
                android:textSize="13dp" />

            <LinearLayout
                android:id="@+id/youtubeLinkLayout"
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:layout_margin="7dp"
                android:background="@drawable/layout_borders"
                android:paddingRight="10dp">

                <ImageView
                    android:id="@+id/youtubeLinkImage"
                    android:layout_width="65dp"
                    android:layout_height="match_parent"
                    android:background="#000" />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/youtubeLinkTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="4dp"
                        android:maxLines="1"
                        android:textColor="#000"
                        android:textSize="13dp"
                        />

                    <TextView
                        android:id="@+id/youtubeLinkAuthor"
                        android:layout_width="match_parent"
                        android:textSize="12.5dp"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/youtubeLinkTitle"
                        android:layout_marginLeft="20dp"
                        android:maxLines="1"
                        android:textColor="#000"

                        />

                    <TextView
                        android:layout_alignParentBottom="true"
                        android:layout_marginBottom="3dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="20dp"
                        android:text="Youtube.com"
                        android:textSize="12dp"

                        />
                </RelativeLayout>
            </LinearLayout>


            <ImageView
                android:id="@+id/postImage"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="2dp"
                android:adjustViewBounds="true"
                android:contentDescription="Specs"
                android:paddingLeft="8dp"
                android:paddingRight="8dp"
                android:scaleType="centerCrop"
                android:scrollbars="vertical" />


        </LinearLayout>


        <View
            android:layout_width="wrap_content"
            android:layout_height="1dp"
            android:layout_below="@+id/postInfoLayout"
            android:background="#ccc" />
        <!--android:layout_marginLeft="13dp"-->
        <!--android:layout_marginRight="13dp"-->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/postInfoLayout"
            android:orientation="horizontal"
            android:paddingBottom="10dp"
            android:paddingLeft="30dp"
            android:paddingRight="20dp"
            android:paddingTop="10dp">

            <!--<ImageView-->
            <!--android:layout_width="20dp"-->
