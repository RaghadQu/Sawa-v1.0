<android.support.v4.widget.SwipeRefreshLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/swiperefresh"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<android.support.v4.widget.NestedScrollView
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:orientation="vertical">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@color/purple"
            android:focusableInTouchMode="true">

            <TextView
                android:id="@+id/ToolbarText"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:drawableLeft="@mipmap/left"
                android:gravity="center"
                android:paddingRight="32dp"
                android:text="Ibrahim Zahra"
                android:textColor="#fff"
                android:textSize="20dp"
                android:textStyle="bold" />

        </Toolbar>

        <LinearLayout
            android:id="@+id/RelativeLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/RelativeLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="250dp"
                    android:background="#fff">

                    <ImageView
                        android:id="@+id/coverPhoto"
                        android:layout_width="match_parent"
                        android:layout_height="160dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/cover" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/user_profile_photo"
                        android:layout_width="95dp"
                        android:layout_height="95dp"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:layout_gravity="center"
                        android:layout_marginTop="35dp"
                        android:background="@drawable/profile_picture"
                        android:elevation="5dp"
                        android:scaleType="centerCrop" />
                </FrameLayout>

            </LinearLayout>

            <ProgressBar
                android:id="@+id/circular_progress_bar"
                style="?android:attr/progressBarStyleHorizontal"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="-112dp"
                android:background="@drawable/progress_bar_backgroung"
                android:indeterminate="false"
                android:max="48"
                android:progress="1"
                android:progressDrawable="@drawable/circular_progress_bar"
                android:visibility="invisible" />


            <TextView
                android:id="@+id/user_profile_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="23dp"
                android:background="#00000000"
                android:gravity="center"
                android:padding="5dp"
                android:text="Ibrahim Zahra"
                android:textColor="#000"
                android:textColorHint="#000"
                android:textSize="18dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/editBio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="35dp"
                    android:layout_marginRight="15dp" />


                <ImageView
                    android:id="@+id/aboutFriendIcon"
                    android:layout_width="22dp"
                    android:layout_height="22dp"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/about_icon" />

            </LinearLayout>

            <Button
                android:id="@+id/friendStatus"
                android:layout_width="121dp"
                android:layout_height="31dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:background="@drawable/selector_xml_btn_yellow"
                android:text="Follow"
                android:textAllCaps="false"
                android:textColor="@color/purple" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-32dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/myFollowState"
                    android:layout_width="85dp"
                    android:layout_height="31dp"
                    android:text="Follow"
                    android:textAllCaps="false"
                    android:background="@drawable/left_corners_50dp"
                    android:paddingLeft="11dp"
                    android:visibility="invisible"

                    />

                <ImageView
                    android:id="@+id/otherFollowState"
                    android:layout_width="36dp"
                    android:layout_height="31dp"
                    android:background="@drawable/right_corners_50dp"
                    android:src="@drawable/follower_icon"
                    android:paddingLeft="3dp"
                    android:paddingTop="3.5dp"
                    android:paddingBottom="3.5dp"
                    android:paddingRight="3.7dp"

                    android:visibility="invisible" />


            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressBar_button"
                style="?android:attr/progressBarStyleSmall"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="-24dp"
                android:elevation="2dp"
                android:indeterminate="false"
                android:indeterminateTint="@color/purple"
                android:visibility="visible" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/showSong"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_gravity="center"
                android:layout_marginTop="5dp"
                android:src="@drawable/music" />
            <View
                android:layout_width="match_parent"
                android:layout_height="0.1dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:background="#ACACAC" />

        </LinearLayout>





